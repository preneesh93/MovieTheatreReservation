                                        <td class="auto-style1">
                                            <asp:ImageButton ID="ImageButton1" runat="server"
                                                OnClientClick="$find('loginPopUp').hide(); 
                                            return false;"
                                                Height="30px" ImageUrl="~/Images/download.png" Width="27px" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="auto-style15"></td>
                                        <td class="auto-style16">
